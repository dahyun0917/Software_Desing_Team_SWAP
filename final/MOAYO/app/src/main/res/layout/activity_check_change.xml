<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".checkAndChange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <Button
                android:id="@+id/back_button"
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:text="back"
                android:textColor="#5C5A5A"
                android:textSize="10dp"
                app:backgroundTint="#FFD1A6"
                app:iconTint="#000000" />

            <TextView
                android:id="@+id/text_check"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="#FFD1A6"
                android:gravity="center"
                android:text="예매확인 및 변경"
                android:textColor="#050505"
                android:textSize="20dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="221dp">

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#CCCCCC"
                    android:text="날짜"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/starttimeText"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="#C1DCF1"
                        android:text="출발시간"
                        android:textColor="#040404" />

                    <TextView
                        android:id="@+id/departureTimeText2"
                        android:layout_width="333dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/arrivetimeText"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="#C1DCF1"
                        android:text="도착시간"
                        android:textColor="#040404" />

                    <TextView
                        android:id="@+id/arrivalTimeText2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/startText"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="#C1DCF1"
                        android:text="출발지"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/departureLocationText2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/arriveText"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="#C1DCF1"
                        android:text="도착지"
                        android:textColor="#040404" />

                    <TextView
                        android:id="@+id/arrivalLocationText2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bustypeText"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="#C1DCF1"
                        android:text="버스유형"
                        android:textColor="#040404" />

                    <TextView
                        android:id="@+id/bustypeText2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="187dp">

            </FrameLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="93dp"
                android:layout_height="88dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/buss"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <Button
            android:id="@+id/button_change"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="변경하기"
            app:backgroundTint="#AEAFAC" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>