<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="#FFD1A6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:fontFamily="@font/londrinashadow"
        android:gravity="center"
        android:text="MOAYO"
        android:textSize="36sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="486dp"
        android:layout_marginBottom="5dp"
        android:background="#FFD1A6"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:text="출발지"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/departureLocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:textColor="#686564"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:text="목적지"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/arrivalLocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:textColor="#686564"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:text="좌석번호"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/seatNumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:textColor="#686564"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:text="출발시간"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/departureTimeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:textColor="#686564"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:text="도착시간"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/arrivalTimeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:textColor="#686564"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:text="총 금액"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/amountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFAFA"
                android:gravity="center"
                android:textColor="#686564"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/paymentBotton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CAB8B8"
        android:text="결제하기"
        app:backgroundTint="#CAB8B8" />
</LinearLayout>